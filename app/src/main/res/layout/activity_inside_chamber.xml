    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LB_comentarioEstadoInterior"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Comentario destacable del estado interior :"
            android:textStyle="italic"
            android:textSize="12dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/tB_comentario"
            android:layout_weight="1" />


    </LinearLayout>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/IV_arqInterior"
            android:src="@drawable/arqueton_interior"
            android:nestedScrollingEnabled="false"
            android:layout_marginLeft="300dp" />

    <!--- Separador  Datos de internet-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/material_blue_grey_800"
        android:orientation="horizontal"
        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/LB_comentario"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Toma una foto del estado de la arqueta"
                android:textStyle="italic"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="78dp"
                android:layout_height="117dp"
                android:id="@+id/IV_camera"
                android:src="@drawable/camara"
                android:layout_marginLeft="80dp"
                android:layout_alignTop="@+id/bt_camera"
                android:layout_weight="0.24" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                android:id="@+id/bt_camera"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ovalo"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:shadowColor="#ff000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    <!--- Separador  Datos de internet-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/material_blue_grey_800"
        android:orientation="horizontal"
        />
    <Button
        android:id="@+id/bt_siguienteDevice"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="Siguiente"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ovalo"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:shadowColor="#ff000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"/>

