<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.alarcon.arquetanatureble.GUI.ParametersDeviceActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre"
        android:id="@+id/nombreDevice"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="UUID : "
        android:id="@+id/LB_UUID"
        android:layout_below="@+id/nombreDevice"
        android:layout_alignStart="@+id/nombreDevice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="245N8976-7896-BBE45-7071-45BBEA67$56"
        android:id="@+id/LB_infoUUID"
        android:layout_alignTop="@+id/LB_UUID"
        android:layout_toEndOf="@+id/LB_UUID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Estado :"
        android:id="@+id/LB_Estado"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/LB_UUID"
        android:layout_toStartOf="@+id/LB_infoUUID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Conectado"
        android:id="@+id/LB_infoEstado"
        android:layout_alignTop="@+id/LB_Estado"
        android:layout_toEndOf="@+id/LB_Estado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Servicio (UUID) :"
        android:id="@+id/LB_ServicioUUID"
        android:layout_below="@+id/LB_Estado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/LB_ServicioUUID"
        android:layout_toEndOf="@+id/LB_ServicioUUID" />
</RelativeLayout>
