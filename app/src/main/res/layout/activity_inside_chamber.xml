                    android:textStyle="italic"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/LB_Designacion3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
